{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SkyBox",
  "version": "1.0.20",
  "identifier": "com.skybox.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "SkyBox",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "visible": true,
        "dragDropEnabled": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$LOCALDATA/Skybox/.thumbnails/**",
          "$APPLOCALDATA/.thumbnails/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "SkyBox Team",
    "copyright": "\u00a9 2026 SkyBox Team.",
    "category": "DeveloperTool",
    "shortDescription": "A Telegram-themed desktop file explorer with cloud integration",
    "longDescription": "SkyBox is a modern desktop file explorer application built with Tauri, React, and TypeScript. It combines traditional file management capabilities with innovative Telegram integration features, allowing users to seamlessly share files and communicate through Telegram directly from the application.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "wix": {
        "language": [
          "en-US"
        ]
      },
      "nsis": {
        "languages": [
          "English"
        ],
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      }
    }
  }
}